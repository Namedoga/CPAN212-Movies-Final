<%- include('partials/header', { title: movie.name }) %>

    <h1>
        <%= movie.name %>
    </h1>
    <p><strong>Description:</strong>
        <%= movie.description %>
    </p>
    <p><strong>Year:</strong>
        <%= movie.year %>
    </p>
    <p><strong>Genres:</strong>
        <%= movie.genres.join(", ") %> </p>
<p><strong>Rating:</strong> <%= movie.rating %></p>

<% if (movie.imageUrl) { %>
    <img src=" <%=movie.imageUrl %>" alt="<%= movie.name %>" style="max-width:200px;">
                <% } %>

                    <p>
                        <a href="/movies/<%= movie._id %>/edit">Edit</a>
                    <form action="/movies/<%= movie._id %>/delete" method="POST" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
    </p>

    <p><a href="/movies">Back to Movies List</a></p>

    <%- include('partials/footer') %>