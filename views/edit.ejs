<%- include('partials/header', { title: 'Edit Movie' }) %>

    <h1>Edit Movie</h1>

    <% if (errorMessage) { %>
        <p style="color:red;">
            <%= errorMessage %>
        </p>
        <% } %>

            <form action="/movies/<%= movie._id %>/edit" method="POST">
                <label>Name:</label>
                <input type="text" name="name" value="<%= movie.name %>" required><br>

                <label>Description:</label>
                <textarea name="description" required><%= movie.description %></textarea><br>

                <label>Year:</label>
                <input type="number" name="year" value="<%= movie.year %>" required><br>

                <label>Genres (comma separated):</label>
                <input type="text" name="genres" value="<%= movie.genres.join(" , ") %>" required><br>

                <label>Rating (1â€“10):</label>
                <input type="number" name="rating" value="<%= movie.rating %>" min="1" max="10" required><br>

                <label>Image URL:</label>
                <input type="text" name="imageUrl" value="<%= movie.imageUrl %>"><br>

                <button type="submit">Update Movie</button>
            </form>

            <p><a href="/movies/<%= movie._id %>">Back to Movie Details</a></p>

            <%- include('partials/footer') %>